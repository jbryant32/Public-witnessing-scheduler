<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PWSSchduler.Views.HomePage"
             Title="Home"
             BackgroundColor="White"
             >
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="SkyBlue"></Setter>
            <Setter Property="MinimumWidthRequest" Value="145"></Setter>
            <Setter Property="WidthRequest" Value="145"></Setter>
            <Setter Property="MinimumHeightRequest" Value="125"></Setter>
            <Setter Property="HeightRequest" Value="125"></Setter>
            <Setter Property="TextColor" Value="White"></Setter>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"></Setter>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"></Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>

        <ScrollView HorizontalOptions="Fill" Padding="10" Margin="0">
            <StackLayout HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="White">
     
                <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Orientation="Vertical" HorizontalOptions="Fill" Margin="0,0,0,20">
                    <Label HorizontalTextAlignment="Center" Text="&#xf073;" FontSize="42" TextColor="Gray">
                        <Label.FontFamily>
                                <OnPlatform x:TypeArguments="x:String"
                                     Android="Font Awesome 5 Free-Solid-900.otf#Font Awesome 5 Free Solid" 
                                        iOS="Font Awesome 5 Free"/>
                            </Label.FontFamily>
                    </Label>
                    <Label HorizontalTextAlignment="Center" Text="Public Witnessing Scheduler" LineBreakMode="WordWrap" FontSize="32" TextColor="Gray"></Label>
                    <BoxView HorizontalOptions="Fill" BackgroundColor="Gray" HeightRequest="1" ></BoxView>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HeightRequest="125">
                    <Button Text="Today" x:Name="ButtonToday" Clicked="ButtonToday_Clicked">
                    </Button>
                    <Button Text="Pending Approval" x:Name="ButtonPendingApproval" Clicked="ButtonPendingApproval_Clicked" >  
                    </Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HeightRequest="125">
                    <Button Text="Scheduled" x:Name="ButtonScheduled" Clicked="ButtonScheduled_Clicked" >
                    </Button>
                    <Button   Text="Send Request" x:Name="ButtonSendRequest" Clicked="ButtonSendRequest_Clicked" >
                    </Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HeightRequest="125">
                    <Button Text="Canceled">
                    </Button>
                    <Button Text="Settings">
                    </Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>