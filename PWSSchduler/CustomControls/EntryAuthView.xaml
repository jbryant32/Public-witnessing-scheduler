<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PWSSchduler.CustomControls.EntryAuthView"
             x:Name="This"
             >
    <ContentView.Content>
        <StackLayout>
            <Entry IsPassword="{Binding Source={x:Reference This},Path=isEntryPassword}" TextChanged="Entry_TextChanged" Unfocused="Entry_Unfocused" />
            <Label Text="{Binding Source={x:Reference This},Path=invalidMessage}" 
                   IsVisible="{Binding Source={x:Reference This},Path=isErrorVisible}">
                <Label.Style>
                    <Style TargetType="Label" >
                        <Setter Property="TextColor" Value="Red"/>
                        <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                        <Setter Property="HorizontalTextAlignment" Value="Center"/>
                    </Style>
                </Label.Style>
            </Label>
        </StackLayout>
    </ContentView.Content>
</ContentView>