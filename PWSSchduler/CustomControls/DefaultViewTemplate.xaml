<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PWSSchduler.CustomControls.DefaultViewTemplate">
  <ContentView.ControlTemplate>
        <ControlTemplate>
            <StackLayout>
                <StackLayout VerticalOptions="CenterAndExpand">
                    <ActivityIndicator VerticalOptions="Center" HorizontalOptions="CenterAndExpand" 
                                           IsEnabled="{TemplateBinding PageIsBusy}" IsRunning="{TemplateBinding IndicatorRunning}"/>
                </StackLayout>
                <ContentPresenter/>
            </StackLayout>
        </ControlTemplate>
  </ContentView.ControlTemplate>
</ContentView>